<h1>Show Author</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @author.name %>
  </li>

  <li>
    <strong>Email:</strong>
    <%= @author.email %>
  </li>

  <li>
    <strong>Super author:</strong>
    <%= @author.super_author %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.author_path(@conn, :edit, @author) %></span>
<span><%= link "Back", to: Routes.author_path(@conn, :index) %></span>
